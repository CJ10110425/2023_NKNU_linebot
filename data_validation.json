{"validation_rules": {
    "insert_validation": [{
        "$jsonSchema": {
            "bsonType": "Object",
            "required": ["professor_name", "date", "main_teaching", "assignment"],
            "properties": {
                "professor_name": {
                    "bsonType": "string",
                    "description": "must be a string"
                },
                "date": {
                    "bsonType": "date",
                    "description": "must be a date type"
                },
                "subject": {
                    "anyof": [
                        {"bsonType": "list"},
                        {"bsonType": "string"}
                    ],
                    "desciption": "data type can be a string or a list"
                }, 
                "assignment": { 
                    "bsonType": "string",
                    "desciption": "must be a string"
                }
            }
        }
    }]
},
    "document": {
